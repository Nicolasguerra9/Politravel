<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PantallaDetalle">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/playa"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:layout_editor_absoluteX="-103dp"
        tools:layout_editor_absoluteY="-16dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/carta"
            android:layout_width="match_parent"
            android:layout_height="960sp"
            android:layout_marginTop="400dp"
            android:elevation="1dp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="26dp">

            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginStart="35sp"
                android:layout_marginTop="100sp"
                android:elevation="2sp"
                android:src="@drawable/star" />

            <TextView
                android:id="@+id/puntuacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="75sp"
                android:textStyle="bold"
                android:layout_marginTop="96sp"
                android:elevation="2sp"
                android:text="Puntuacion"
                android:textColor="@color/white"
                android:textSize="27sp" />

            <TextView
                android:id="@+id/nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:elevation="2sp"
                android:text="Nombre"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="45sp" />

            <TextView
                android:id="@+id/pais"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="65sp"
                android:elevation="2sp"
                android:textStyle="bold"
                android:text="pais"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginStart="225sp"
                android:layout_marginTop="100sp"
                android:elevation="2sp"
                android:src="@drawable/wallet" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="262sp"
                android:layout_marginTop="96sp"
                android:elevation="2sp"
                android:textStyle="bold"
                android:text="€"
                android:textColor="@color/white"
                android:textSize="27sp" />

            <TextView
                android:id="@+id/precio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="280sp"
                android:layout_marginTop="96sp"
                android:elevation="2sp"
                android:text="200.00"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="27sp" />

            <ImageView
                android:id="@+id/imgTransporte"
                android:layout_width="33sp"
                android:layout_height="33sp"
                android:layout_marginStart="35sp"
                android:layout_marginTop="153sp"
                android:elevation="2sp"
                android:src="@drawable/coche" />

            <TextView
                android:id="@+id/transporte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80sp"
                android:layout_marginTop="150sp"
                android:elevation="2sp"
                android:text="Coche"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="27sp" />

            <ImageView
                android:layout_width="37sp"
                android:layout_height="37sp"
                android:layout_marginStart="225sp"
                android:layout_marginTop="150sp"
                android:elevation="2sp"
                android:src="@drawable/calendario" />

            <TextView
                android:id="@+id/duracion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="268sp"
                android:layout_marginTop="150sp"
                android:elevation="2sp"
                android:text="7"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="27sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="290sp"
                android:layout_marginTop="150sp"
                android:elevation="2sp"
                android:textStyle="bold"
                android:text="dias"
                android:textColor="@color/white"
                android:textSize="27sp" />

            <TextView
                android:id="@+id/descripcion"
                android:layout_width="339dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50sp"
                android:layout_marginTop="200sp"
                android:layout_marginEnd="50sp"
                android:elevation="2sp"
                android:textStyle="bold"
                android:text="Un viaje a Tokio te sumergirá en una cultura fascinante y en una de las ciudades más vibrantes del mundo. Visita el majestuoso Palacio Imperial de Tokio, el histórico Templo Sensō-ji, y explora el moderno y animado barrio de Shinjuku. La comida japonesa es deliciosa y variada, y la tecnología en Tokio es sorprendente. También puedes disfrutar de la vida nocturna en el barrio de Roppongi y en la zona de Shibuya."
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="500sp"
                android:elevation="2sp"
                android:text="Itinerario"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/itinerario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="560sp"
                android:layout_marginBottom="500sp"
                android:elevation="2sp"
                android:text="Playa Delfines,&#10;Playa Delfines,&#10;Playa Delfines"
                android:textAlignment="center"
                android:textColor="#2271b3"
                android:textSize="20sp" />

            <com.google.android.gms.maps.MapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="500sp"
                android:layout_marginTop="650sp"/>

        </androidx.cardview.widget.CardView>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>